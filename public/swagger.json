{
    "swagger": "2.0",
    "info": {
        "title": "Time is Meow API",
        "description": "Make your app faster than the reflexes of a cat by leveraging the Meow API!",
        "version": "1.0.0"
    },
    //"host": "shielded-bastion-92244.herokuapp.com",
    "host": "localhost:8000",
    "schemes": [
        "https",
        "http"
    ],
    "basePath": "/api",
    "produces": [
        "application/json",
        "application/html"
    ],
    "paths": {
        "/products": {
            "get": {
                "summary": "Get all products",
                "description": "Returns JSON object with all products carried by Time is Meow®",
                "tags": [
                    "Products"
                ],
                "responses": {
                    "200": {
                        "description": "An array of products",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Product"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/product/{id}": {
            "get": {
                "summary": "Get individual product info",
                "description": "Returns JSON object with info for the requested product (by id)",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of product to view",
                        "required": true,
                        "type": "number"
                    }
                ],
                "tags": [
                    "Product"
                ],
                "responses": {
                    "200": {
                        "description": "An array of products",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Product"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete product",
                "description": "Returns empty JSON object, HTTP 200 on successful delete",
                "tags": [
                    "Product"
                ],
                "responses": {
                    "200": {
                        "description": "Data initially sent to API endpoint",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Product"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/product": {
            "put": {
                "summary": "Add new product",
                "description": "Returns JSON object with all products carried by Time is Meow®",
                "tags": [
                    "Product"
                ],
                "consumes":[
                    "application/json"
                ],
                "parameters":[
                    {
                        "name": "content",
                        "in": "body",
                        "description": "title of product",
                        "required": true,
                        "type": "string",
                        "schema": {
                            "$ref": "#/definitions/Product"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Data initially sent to API endpoint",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Product"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            },
            "patch": {
                "summary": "Update product info",
                "description": "Returns JSON object with the updated product information",
                "tags": [
                    "Product"
                ],
                "consumes": [
                    "application/json"
                ],
                "parameters":[
                    {
                        "name": "product_id",
                        "in": "body",
                        "description": "product id for editing",
                        "required": true,
                        "type": "integer",
                        "format": "int32"
                    },
                    {
                        "name": "key",
                        "in": "body",
                        "description": "key of value to change",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "value",
                        "in": "body",
                        "description": "Value to change",
                        "required": true,
                        "type": "string"
                    }
                ],

                
                "responses": {
                    "200": {
                        "description": "Data initially sent to API endpoint",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Product"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }            
        }
    },
    "definitions": {
        "Product": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string",
                    "description": "Description of product."
                },
                "title": {
                    "type": "string",
                    "description": "Title of product."
                },
                "in_stock": {
                    "type": "boolean",
                    "description": "True/False flag for if a product is in stock"
                }
            },
            "example": {
                "title": "Some watch thing",
                "in_stock": true,
                "description": "this owns"
            },
            "required":["description", "title", "in_stock"]
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                },
                "fields": {
                    "type": "string"
                }
            }
        }
    }
}